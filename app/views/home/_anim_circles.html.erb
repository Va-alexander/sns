<ul class="ch-grid">
<% for i in 1..3 do %>
<li>
  <div class="ch-item">       
    <div class="ch-info">       
        <% case i %>
        <% when 1 %>
          <div class="ch-info-front ch-img-1"></div>
          <div class="ch-info-back">
            <h3>Veni</h3>
            <p>by Julius Caesar <a href="http://en.wikipedia.org/wiki/Veni,_vidi,_vici">View on Wiki</a></p>
        <% when 2 %>
          <div class="ch-info-front ch-img-2"></div>
          <div class="ch-info-back">
            <h3>Vidi</h3>
            <p>by Julius Caesar <a href="http://en.wikipedia.org/wiki/Veni,_vidi,_vici">View on Wiki</a></p>
        <% when 3 %>
          <div class="ch-info-front ch-img-3"></div>
          <div class="ch-info-back">
            <h3>Vici</h3>
            <p>by Julius Caesar <a href="http://en.wikipedia.org/wiki/Veni,_vidi,_vici">View on Wiki</a></p>
        <% end %> 
      </div>  
    </div>
  </div>
</li>
<% end %>
</ul>           